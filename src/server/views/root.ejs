        <input type="submit" id="send-msg" name="all-chat-send" value="Submit">
      </form>
    </aside> -->

    <!-- Keep script tag at bottom of the body -->
    <script src="/js/main.js"></script>
    <script src="/js/clientchat"></script>
    <script src="/js/root.js"></script>
